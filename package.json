{
	"name": "yt-clip",
	"module": "index.ts",
	"type": "module",
	"devDependencies": {
		"bun-types": "latest",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"workspaces": ["packages/*"],
	"private": true,
	"scripts": {
		"client": "bun --cwd packages/ytclip-client",
		"server": "bun --cwd packages/ytclip-server",
		"db": "bun --cwd packages/ytclip-db",
		"migrate": "bun db prisma migrate dev && bun db prisma generate",
		"prepare": "husky install"
	},
	"lint-staged": {
		"packages/ytclip-client/*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"packages/ytclip-server/*.{js,ts}": [
			"biome check --apply-unsafe",
			"biome format --write"
		],
		"*.json": ["biome format --write"]
	}
}
